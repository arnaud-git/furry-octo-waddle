<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.furry_octo_waddle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.furry_octo_waddle.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
			android:name="com.example.furry_octo_waddle.activities.LearnActivity"
			android:label="@string/string_learn"
			android:windowSoftInputMode="adjustResize"
			android:configChanges="orientation|screenSize"
			android:parentActivityName="com.example.furry_octo_waddle.activities.MainActivity" >
			<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.example.furry_octo_waddle.activities.MainActivity" />         
 		</activity>
 		
        <activity
			android:name="com.example.furry_octo_waddle.activities.AddActivity"
			android:label="@string/string_add"
			android:windowSoftInputMode="adjustResize"
			android:parentActivityName="com.example.furry_octo_waddle.activities.MainActivity" >
			<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.example.furry_octo_waddle.activities.MainActivity" />         
 		          
 		</activity>
 		
        <activity
			android:name="com.example.furry_octo_waddle.activities.ModifyActivity"
			android:label="@string/string_translate"
			android:windowSoftInputMode="adjustResize"
			android:parentActivityName="com.example.furry_octo_waddle.activities.TranslateActivity" >
			<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.example.furry_octo_waddle.activities.TranslateActivity" />         
 		          
 		</activity>
        
        <activity
			android:name="com.example.furry_octo_waddle.activities.TestActivity"
			android:label="@string/string_test"
			android:windowSoftInputMode="stateAlwaysVisible"
			android:configChanges="orientation|screenSize"
			android:parentActivityName="com.example.furry_octo_waddle.activities.MainActivity" >
			<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.example.furry_octo_waddle.activities.MainActivity" />         
 		          
 		</activity>
 		
        <activity
			android:name="com.example.furry_octo_waddle.activities.TranslateActivity"
			android:label="@string/string_translate" 
			android:windowSoftInputMode="adjustResize"
			android:parentActivityName="com.example.furry_octo_waddle.activities.MainActivity" >
			<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.example.furry_octo_waddle.activities.MainActivity" />         
 		         
 		</activity>
 		
        <activity
			android:name="com.example.furry_octo_waddle.activities.TestResultsActivity"
			android:label="@string/string_results" 
			android:windowSoftInputMode="adjustResize"
			android:parentActivityName="com.example.furry_octo_waddle.activities.MainActivity" >
			<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.example.furry_octo_waddle.activities.MainActivity" />         
 		         
 		</activity>
 		
    </application>

</manifest>
