<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRomanizationWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editRomanizationWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="Romanization"
            android:nextFocusDown="@+id/tvPronunciationWord"
            android:singleLine="true"
            android:textSize="30sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPronunciationWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvRomanizationWord"
            android:gravity="center"
            android:textSize="30sp"
           android:visibility="gone" />

        <EditText
            android:id="@+id/editPronunciationWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/editRomanizationWord"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="Pronunciation"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textSize="30sp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>