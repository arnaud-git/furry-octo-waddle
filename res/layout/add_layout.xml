<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:isScrollContainer="false" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back"
                    android:text="@string/string_add_words"
                    android:textSize="35sp" />

                <RelativeLayout
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textViewAdd"
                    android:layout_marginBottom="160dp"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/back"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/editWord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:hint="New Word !"
                        android:inputType="text"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/editWordTrans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/editWord"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:hint="Translation"
                        android:inputType="text"
                        android:textSize="30sp" >
                    </EditText>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/buttonsLearn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/viewpager"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/back"
                        android:text="@string/string_add" />
                </LinearLayout>
            </RelativeLayout>
    </ScrollView>

</RelativeLayout>